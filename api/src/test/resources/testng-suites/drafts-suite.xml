<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Drafts" verbose="1" configfailurepolicy="continue" parallel="none">

    <test name="Create new root widget">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.create.CreateRootWidgetTest"/>
        </classes>
    </test>

    <test name="Create new child widget">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.create.CreateChildWidgetTest"/>
        </classes>
    </test>

    <test name="Create new property">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.create.CreatePropertyTest"/>
        </classes>
    </test>

    <test name="Create new property value">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.create.CreatePropertyValueTest"/>
        </classes>
    </test>

    <test name="Modify page">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.modify.ModifyPageTest"/>
        </classes>
    </test>

    <test name="Modify widget">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.modify.ModifyWidgetTest"/>
        </classes>
    </test>

    <test name="Modify property">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.modify.ModifyPropertyTest"/>
        </classes>
    </test>

    <test name="Modify Value">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.modify.ModifyPropertyValueTest"/>
        </classes>
    </test>

    <test name="Delete property value">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.delete.DeletePropertyValueTest"/>
        </classes>
    </test>

    <test name="Delete property">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.delete.DeletePropertyTest"/>
        </classes>
    </test>

    <test name="Delete widget">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.delete.DeleteWidgetTest"/>
        </classes>
    </test>

    <test name="Data Validation Test" parallel="methods">
        <classes>
            <class name="ru.alfabank.platform.apitest.drafts.DataValidationTest"/>
        </classes>
    </test>

</suite>
